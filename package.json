{
  "name": "craftalog",
  "description": "Craftalog - A Minecraft Recipe Catalog",
  "version": "0.0.0",
  "type": "module",
  "author": {
    "name": "Sean Kennedy",
    "email": "sean@codeserious.com",
    "url": "http://www.codeserious.com"
  },
  "scripts": {
    "dev": "astro dev",
    "dev:prepare": "npm run tool:update && npm run dev",
    "start": "astro dev",
    "build": "npm run tool:update && astro check && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "tool:update": "node scripts/parse-minecraft-recipes.js",
    "lint": "eslint . --ext .js,.ts,.astro",
    "lint:fix": "eslint . --ext .js,.ts,.astro --fix",
    "format": "prettier --write \"**/*.{js,ts,astro,json,md}\"",
    "type-check": "astro check"
  },
  "dependencies": {
    "astro": "^4.16.18",
    "@astrojs/check": "^0.9.4",
    "modern-normalize": "^2.0.0",
    "typescript": "^5.6.3"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.1",
    "eslint-plugin-astro": "^1.2.4",
    "prettier": "^3.3.3",
    "prettier-plugin-astro": "^0.14.1"
  },
  "private": true
}
