---
import MainLayout from '../layouts/MainLayout.astro';
import ItemIcon from '../components/ItemIcon.astro';
import { recipes } from '../data/generated/item-recipes';
import { getCraftingTableState, getResultItemDetails } from '../utils/item-utils';

// Get recipe from URL query parameter
const url = new URL(Astro.request.url);
const recipeParam = url.searchParams.get('recipe') || '';

// Get initial state
const recipeList = Object.keys(recipes);
const initialItems = getCraftingTableState(recipeParam);
const initialResult = getResultItemDetails(recipeParam);
---

<MainLayout title="Craftalog - A Minecraft Recipe Catalog">
  <div class="page">
    <div class="page__header">
      <h1 class="page__title">Crafting Grid</h1>
      <p class="page__subtitle">
        Recipe: <span id="current-recipe" class="page__recipe-name">{recipeParam || 'none'}</span>
      </p>
    </div>

    <div class="crafting" id="crafting-area">
      <div class="crafting__grid">
        {
          initialItems.map((cell, index) => (
            <div class="crafting__cell" data-index={index}>
              {cell && <ItemIcon item={cell} />}
            </div>
          ))
        }
      </div>
      <div class="crafting__result">
        <div class="crafting__cell">
          {initialResult && <ItemIcon item={initialResult} />}
        </div>
      </div>
    </div>

    {
      recipeList.length > 0 && (
        <div class="recipes">
          <h2 class="recipes__title">Recipes</h2>
          <div class="recipes__search">
            <input
              type="text"
              id="recipe-search"
              class="recipes__search-input"
              placeholder="Search recipes..."
              aria-label="Search recipes"
            />
          </div>
          <ul class="recipes__list" id="recipes-list">
            {recipeList.map((recipe) => (
              <li class="recipes__item" data-recipe={recipe}>
                <a href={`?recipe=${recipe}`} class="recipes__link">
                  {recipe}
                </a>
              </li>
            ))}
          </ul>
        </div>
      )
    }
  </div>
</MainLayout>

<script>
  import { getCraftingTableState, getResultItemDetails } from '../utils/item-utils';
  import { generateItemIconHTML } from '../utils/item-icon-html';

  // Function to update the crafting grid based on URL
  function updateCraftingGrid() {
    const url = new URL(window.location.href);
    const recipe = url.searchParams.get('recipe') || '';

    // Update recipe display
    const recipeDisplay = document.getElementById('current-recipe');
    if (recipeDisplay) {
      recipeDisplay.textContent = recipe || 'none';
    }

    // Get the crafting table state
    const items = getCraftingTableState(recipe);
    const result = getResultItemDetails(recipe);

    // Update crafting cells
    const craftingArea = document.getElementById('crafting-area');
    if (!craftingArea) return;

    const cells = craftingArea.querySelectorAll('.crafting__grid .crafting__cell');
    cells.forEach((cell, index) => {
      const item = items[index];
      cell.innerHTML = generateItemIconHTML(item);
    });

    // Update result cell
    const resultCell = craftingArea.querySelector('.crafting__result .crafting__cell');
    if (resultCell) {
      resultCell.innerHTML = generateItemIconHTML(result);
    }
  }

  // Simple fuzzy match function
  function fuzzyMatch(searchTerm: string, text: string): boolean {
    const search = searchTerm.toLowerCase();
    const target = text.toLowerCase();

    // Direct substring match
    if (target.includes(search)) {
      return true;
    }

    // Fuzzy match: all characters in search appear in order in target
    let searchIndex = 0;
    for (let i = 0; i < target.length && searchIndex < search.length; i++) {
      if (target[i] === search[searchIndex]) {
        searchIndex++;
      }
    }
    return searchIndex === search.length;
  }

  // Filter recipes based on search input
  function filterRecipes() {
    const searchInput = document.getElementById('recipe-search') as HTMLInputElement;
    const recipesList = document.getElementById('recipes-list');
    if (!searchInput || !recipesList) return;

    const searchTerm = searchInput.value.trim();
    const recipeItems = recipesList.querySelectorAll('.recipes__item');

    recipeItems.forEach((item) => {
      const recipeName = item.getAttribute('data-recipe') || '';
      const matches = searchTerm === '' || fuzzyMatch(searchTerm, recipeName);

      if (item instanceof HTMLElement) {
        item.style.display = matches ? '' : 'none';
      }
    });
  }

  // Listen for popstate (back/forward navigation)
  window.addEventListener('popstate', updateCraftingGrid);

  // Listen for link clicks to update without full page reload
  document.addEventListener('click', (e) => {
    const target = e.target as HTMLElement;
    const link = target.closest('a[href^="?recipe="]');
    if (link && link instanceof HTMLAnchorElement) {
      e.preventDefault();
      const url = new URL(link.href);
      window.history.pushState({}, '', url);
      updateCraftingGrid();
    }
  });

  // Listen for search input
  document.addEventListener('DOMContentLoaded', () => {
    const searchInput = document.getElementById('recipe-search');
    if (searchInput) {
      searchInput.addEventListener('input', filterRecipes);
    }
  });
</script>

<style>
  /* Page Block */
  .page__header {
    margin-bottom: var(--space-8);
  }

  .page__subtitle {
    margin-top: var(--space-2);
    font-size: 0.9375rem;
    color: var(--color-muted);
  }

  .page__recipe-name {
    font-family: var(--font-mono);
    color: var(--color-fg);
    font-weight: 500;
  }

  /* Crafting Block */
  .crafting {
    display: flex;
    gap: var(--space-4);
    background-color: var(--color-gray-light);
    padding: var(--space-4);
    border-radius: 0.5rem;
    margin-bottom: var(--space-12);
  }

  .crafting__grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-4);
    width: 70%;
    position: relative;
  }

  .crafting__result {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 30%;
  }

  .crafting__cell {
    width: 80%;
    background-color: var(--color-gray);
    box-shadow:
      0.5em 0.5em 0 0 rgba(0, 0, 0, 0.5) inset,
      -0.5em -0.5em 0 0 rgba(255, 255, 255, 0.75) inset;
    display: flex;
    justify-content: center;
    align-items: center;
    aspect-ratio: 1 / 1;
    position: relative;
    padding: var(--space-4);
  }

  /* Recipes Block */
  .recipes {
    margin-top: var(--space-12);
  }

  .recipes__search {
    margin-top: var(--space-4);
    margin-bottom: var(--space-4);
  }

  .recipes__search-input {
    width: 100%;
    max-width: 400px;
    padding: var(--space-3) var(--space-4);
    border: 1px solid var(--color-border);
    border-radius: 0.375rem;
    font-family: var(--font-sans);
    font-size: 0.9375rem;
    transition: all 0.2s;
  }

  .recipes__search-input:focus {
    outline: none;
    border-color: var(--color-fg);
    box-shadow: 0 0 0 2px rgba(9, 9, 11, 0.1);
  }

  .recipes__list {
    margin-top: var(--space-4);
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    gap: var(--space-2);
  }

  .recipes__link {
    display: block;
    padding: var(--space-3) var(--space-4);
    border: 1px solid var(--color-border);
    border-radius: 0.375rem;
    font-family: var(--font-mono);
    font-size: 0.875rem;
    transition: all 0.2s;
  }

  .recipes__link:hover {
    border-color: var(--color-fg);
    background-color: white;
  }

  /* Mobile Responsive */
  @media (max-width: 640px) {
    .crafting {
      flex-direction: column;
      gap: var(--space-6);
    }

    .crafting__grid,
    .crafting__result {
      width: 100%;
    }

    .recipes__list {
      grid-template-columns: 1fr;
    }
  }

  /* Need to include ItemIcon styles for client-side rendering */
  :global(.item-icon) {
    width: 100%;
    position: relative;
    aspect-ratio: 1/1;
    image-rendering: pixelated;
  }

  :global(.item-icon--block) {
    max-width: 60%;
  }

  :global(.icon) {
    width: 100%;
    height: auto;
  }

  :global(.block) {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
    transform-style: preserve-3d;
    transform: rotateX(-35deg) rotateY(-45deg);
  }

  :global(.block .top),
  :global(.block .left),
  :global(.block .right) {
    background: #fff none no-repeat center / cover;
    width: 100%;
    height: 100%;
    position: absolute;
    display: flex;
  }

  :global(.left) {
    transform: rotateY(-90deg) translateX(50%) rotateY(90deg);
  }

  :global(.right) {
    transform: translateX(50%) rotateY(90deg);
  }

  :global(.top) {
    transform: translateY(-50%) rotateX(90deg);
  }
</style>
