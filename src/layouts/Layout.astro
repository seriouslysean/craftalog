---
interface Props {
  title: string;
  description?: string;
}

const {
  title,
  description = 'Craftalog is a Minecraft recipe catalog. Find the recipe you need quickly and easily!',
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />

    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://www.craftalog.app" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  @import 'modern-normalize/modern-normalize.css';

  :root {
    /* Minecraft colors */
    --color-gray: #8b8b8b;
    --color-gray-light: #c6c6c6;
    --color-gray-dark: #373737;

    /* Clean color palette */
    --color-bg: #fafafa;
    --color-fg: #09090b;
    --color-border: #e4e4e7;
    --color-muted: #71717a;

    /* Spacing */
    --space-1: 0.25rem;
    --space-2: 0.5rem;
    --space-3: 0.75rem;
    --space-4: 1rem;
    --space-6: 1.5rem;
    --space-8: 2rem;
    --space-12: 3rem;

    /* Typography */
    --font-sans:
      -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    --font-mono: ui-monospace, SFMono-Regular, 'SF Mono', Menlo, Consolas, monospace;
  }

  * {
    box-sizing: border-box;
  }

  html {
    font-family: var(--font-sans);
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  body {
    margin: 0;
    background: var(--color-bg);
    color: var(--color-fg);
    line-height: 1.6;
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  figure,
  p,
  ol,
  ul {
    margin: 0;
  }

  h1 {
    font-size: 2rem;
    font-weight: 700;
    line-height: 1.2;
    letter-spacing: -0.02em;
  }

  h2 {
    font-size: 1.5rem;
    font-weight: 600;
    line-height: 1.3;
    letter-spacing: -0.01em;
    margin-top: var(--space-8);
  }

  h2:first-child {
    margin-top: 0;
  }

  ol,
  ul {
    list-style: none;
    padding-inline: 0;
  }

  a {
    color: var(--color-fg);
    text-decoration: none;
    border-bottom: 1px solid var(--color-border);
    transition: border-color 0.2s;
  }

  a:hover {
    border-bottom-color: var(--color-fg);
  }

  img {
    display: block;
    max-inline-size: 100%;
  }
</style>
